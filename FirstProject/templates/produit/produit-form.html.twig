{% extends "base.html.twig" %}

{% block title %}Ajout produit{% endblock %}

{% block body %}
<div class="text-center">
{{ form_start(form_produit) }}
    <div class="title">
    <h2>{{ form_title }}</h2>
        {{ form_errors(form_produit) }}
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="row pb-1">
                {{ form_row(form_produit.designation) }}
            </div>
            <div class="row pb-1">
                {{ form_row(form_produit.couleur) }}
            </div>
            <div class="row pb-1">
                {{ form_row(form_produit.prix) }}
            </div>
            <div class="row pb-1">
                {{ form_row(form_produit.poids) }}
            </div>
            <div class="row pb-1">
                {{ form_row(form_produit.categorie) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center pt-3">
    <div class="col-1">{{ form_row(form_produit.envoyer) }}</div>
    <div class="col-1"><a href="{{ path ('produits') }}"><button class="btn btn-secondary" type="button" value="">Retour</button></a></div>
{{ form_end(form_produit) }}
</div>
{% endblock %}